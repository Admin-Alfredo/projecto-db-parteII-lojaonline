<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>Featured Product</h2>
        </div>
        <div class="featured__controls">
          <ul>
            <li class="active" data-filter="*">All</li>
            <li data-filter=".oranges">Eletronicos</li>
            <li data-filter=".fresh-meat">Alimentos</li>
            <li data-filter=".vegetables">Emovéis</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row featured__filter">
      {{#each produtos}}
      <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
          <div class="featured__item__pic set-bg" data-setbg="img/featured/feature-1.jpg">
            <ul class="featured__item__pic__hover">
              <li><a href="#"><i class="fa fa-heart"></i></a></li>
              <li><a href="#"><i class="fa fa-retweet"></i></a></li>
              <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
          </div>
          <div class="featured__item__text">
            <h6><a href="#">{{this.nome}}</a></h6>
            <h5>{{this.preco}} Kz</h5>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</section>
<script>
  function getCookie(name) {
    const cookieName = name + "=";
    const decodedCookie = decodeURIComponent(document.cookie);
    const cookieArray = decodedCookie.split(';');

    for (let i = 0; i < cookieArray.length; i++) {
      let cookie = cookieArray[i];
      while (cookie.charAt(0) === ' ') {
        cookie = cookie.substring(1);
      }
      if (cookie.indexOf(cookieName) === 0) {
        return cookie.substring(cookieName.length, cookie.length);
      }
    }

    return null; // Retorna null se o cookie não for encontrado
  }

  // Exemplo de uso: lendo um cookie chamado 'meuCookie'
  const meuCookie = getCookie('lojaonline_cliente');
  if (meuCookie) {
    console.log(`Valor do cookie 'meuCookie': ${meuCookie}`);
  } else {
    console.log('Cookie não encontrado.');
  }
</script>